<%=stylesheet_link_tag("style.css")=%>
<link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link
    href="https://fonts.googleapis.com/css2?family=Bangers&family=Carter+One&family=Nunito+Sans:wght@400;700&display=swap"
    rel="stylesheet">
<!-- 
    - #HEADER
  -->

  <header class="header active" data-header>
    <div class="container">

      <button class="nav-toggle-btn" aria-label="toggle manu" data-nav-toggler>
        <ion-icon name="menu-outline" aria-hidden="true" class="menu-icon"></ion-icon>
        <ion-icon name="close-outline" aria-label="true" class="close-icon"></ion-icon>
      </button>

     <%= link_to image_tag('logo.png', alt: 'SBH', width: 120, height: 100), root_path, class: 'logo' %>

            <nav class="navbar" data-navbar>
              <ul class="navbar-list">

                <li class="navbar-item">
                  <%= link_to 'Home', root_path, class: 'navbar-link', data: { nav_link: true } %>
                </li>

                <li class="navbar-item">
                  <%= link_to 'Shop', shop_path, class: 'navbar-link', data: { nav_link: true } %>
                </li>

                <li class="navbar-item">
                  <%= link_to 'Collections', '#', class: 'navbar-link', data: { nav_link: true } %>
                </li>

                <li class="navbar-item">
                  <%= link_to 'Blogs', '#', class: 'navbar-link', data: { nav_link: true } %>
                </li>

                <li class="navbar-item">
                  <%= link_to 'Contact', '#', class: 'navbar-link', data: { nav_link: true } %>
                </li>

              </ul>
            </nav>
              <div class="header-actions">

                <%= link_to '#', class: 'action-btn', aria: { label: 'Search' } do %>
                  <ion-icon name="search-outline" aria-hidden="true"></ion-icon>
                <% end %>

                <% if user_signed_in? %>
                  <%= link_to  edit_user_registration_path, class: 'action-btn user', aria: { label: 'User' } do %>
                    <ion-icon name="person-outline" aria-hidden="true"></ion-icon>
                  <% end %>

                  <%= link_to destroy_user_session_path, method: :delete, class: 'action-btn user', aria: { label: 'Logout' } do %>
                    <ion-icon name="log-out-outline" aria-hidden="true"></ion-icon>
                  <% end %>
                <% else %>
                  <%= link_to new_user_session_path, class: 'action-btn user', aria: { label: 'Sign Up' } do %>
                    <ion-icon name="person-add-outline" aria-hidden="true"></ion-icon>
                  <% end %>
                <% end %>

                <%= link_to cart_path, class: 'action-btn', aria: { label: 'cart' } do %>
                  <ion-icon name="bag-handle-outline" aria-hidden="true"></ion-icon>
                  <%= render partial: "layouts/shareshome/cart_count", locals: {cart_count: cart_count} %>
                <% end %>

              </div>

    </div>
  </header>
  <%= javascript_include_tag("slider.js") %>
<script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
  <script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>

  
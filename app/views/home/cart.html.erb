<!-- app/views/home/cart.html.erb -->

<div class="container "style="margin-top:150px" id="cart">
  <h1>Your Cart</h1>

  <% if @cart.empty? %>
    <p>Your cart is empty.</p>
  <% else %>
    <% @cart.each do |product, quantity| %>
      <%= render partial: 'card_cart', locals: { product: product , quantity: quantity} %>
    <% end %>

     <%= turbo_frame_tag 'total_price' do %>
     
     <% render partial: 'total_price', locals: { calculate_total_price: calculate_total_price } %>
    <% end %>

 
  <% end %>
  <%= link_to 'Checkout', checkout_path, class: 'btn btn-primary' %>
</div>

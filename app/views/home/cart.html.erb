<!-- app/views/home/cart.html.erb -->

<div class="container">
  <h1>Your Cart</h1>

  <% if @cart.empty? %>
    <p>Your cart is empty.</p>
  <% else %>
    <% @cart.each do |product, quantity| %>
      <%= render partial: 'card_cart', locals: { product: product , quantity: quantity} %>
    <% end %>

    <div class="total-price">
      <p><strong>Total:</strong> <%= number_to_currency(@cart.sum { |product, quantity| product.price * quantity }) %></p>
    </div>
  <% end %>
</div>
<%= link_to 'Checkout', checkout_path, class: 'btn btn-primary' %>
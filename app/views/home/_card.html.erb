<div class="card" style="width: 18rem;"id="<%= dom_id(product) %>">
  <% if product.image.attached? %>
    <%= image_tag(product.image , class: "card-img-top img-fluid", style: "height: 200px; object-fit: cover;") %>
  <% else %>
    <%= image_tag("placeholder.jpg", class: "card-img-top img-fluid", style: "height: 200px; object-fit: cover;") %>
  <% end %>
  <div class="card-body">
    <h5 class="card-title"><%= product.name %></h5>
    <p class="card-text" style="overflow: hidden; text-overflow: ellipsis; display: -webkit-box; -webkit-line-clamp: 2; -webkit-box-orient: vertical;">
      <%= product.description %>
    </p>
    <p class="card-text">
      <strong>Price:</strong>
      <%= product.price %>
    </p>
    <%= link_to "Add to cart", add_to_cart_from_home_path(product_id: product.id), method: :post, class: "btn btn-primary" %>
  </div>
</div>
<%= stylesheet_link_tag 'styleform' %>
<div class="container">
  <%= form_with(model: resource, url: registration_path(resource_name), html: { id: "signup_form" }) do |f| %>
   <span style= "color:red;">
  <%= render "devise/shared/error_messages", resource: resource %>
  </span>

    <% if resource.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(resource.errors.count, "error") %> prohibited this user from being saved:</h2>
        <ul>
          <% resource.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", required: true %>
    </div>

    <div class="field">
      <%= f.label :password %>
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password", required: true, minlength: 8 %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", required: true %>
    </div>

    <div>
      <%= f.label :name, style: "display: block" %>
      <%= f.text_field :name, required: true %>
    </div>

    <div>
      <%= f.label :last_name, style: "display: block" %>
      <%= f.text_field :last_name, required: true %>
    </div>

    <div>
      <%= f.label :phone_number, style: "display: block" %>
      <%= f.text_field :phone_number %>
    </div>

    <div>
      <%= f.label :state, style: "display: block" %>
      <%= f.select :state, User::TUNISIAN_STATES, prompt: "Select State", required: true %>
    </div>

    <div>
      <%= f.label :gender, style: "display: block" %>
      <%= f.select :gender, User::GENDER_OPTIONS, prompt: "Select Gender", required: true %>
    </div>

    <div>
      <%= f.label :address_1, style: "display: block" %>
      <%= f.text_area :address_1, rows: 4 %>
    </div>

    <div>
      <%= f.label :address_2, style: "display: block" %>
      <%= f.text_area :address_2, rows: 4 %>
    </div>

    <div>
      <%= f.label :birth_date, style: "display: block" %>
      <%= f.date_field :birth_date, required: true, max: (Date.today - 18.years).strftime('%Y-%m-%d') %>
    </div>

    <div>
      <%= f.submit "Sign up" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>



<div class="card mb-3" style="max-width: 540px;">
  <div class="row g-0">
    <div class="col-md-4">
      <!-- You can replace this with an actual image source -->
      <img src="..." class="img-fluid rounded-start" alt="...">
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title">Category ID: <%= @category.id %></h5>
        <p class="card-text"><strong>Name:</strong> <%= @category.name %></p>
        <p class="card-text">
          <%= link_to edit_category_path(@category), class: "btn btn-primary" do %>
            <i class="fas fa-edit"></i> Edit 
          <% end %>
          <%= link_to categories_path, class: "btn btn-secondary" do %>
            <i class="fas fa-arrow-left"></i> Back 
          <% end %>
          <%= link_to @category, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" do %>
            <i class="fas fa-trash-alt"></i> Delete 
          <% end %>
        </p>
      </div>
    </div>
  </div>
</div>
